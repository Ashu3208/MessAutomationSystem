<%- include("../partials/head") %>
<title>Apply for Rebate</title>
<%- include("../partials/head2") %>
    <%- include("../student/navbar") %>
    <!-- Example of a Bootstrap modal that displays an error message -->

<div class="modal fade" id="errorModal" tabindex="-1" aria-labelledby="errorModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="errorModalLabel">STATUS</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p id="errorMessage"></p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
                
                <div class="row">
                    <div class="col-md-6">
                      <div class="card">
                        <h2>Active rebate</h2>
                        <% if(active === 1) { %>
                          <div class="mb-3">
                            <label for="startingDate" class="form-label"><b>Starting date</b></label>
                            <!-- <input type="date" id="startingDate" class="form-control" name="startDate"> -->
                            <p><%= start_date %></p>
                            <label for="endingDate" class="form-label"><b>Ending Date</b></label>
                            <!-- <input type="date" id="endingDate" class="form-control" name="endDate"> -->
                            <p><%= end_date %></p>
                            <label for="status" class="form-label"><b>status</b></label>
                            <br>
                            <%=status%>
                            <% if(start > curr_date || rebates[index].status == "pending" ) {%>
                            <form action="/student/rebatewithdraw" method="post">
                                <button name="button" type="submit" class="btn btn-primary mt-3" value="<%= rebates[index]._id %>">Withdaw</button>
                            </form>
                            <% } %>
                          </div>
                        <% } %>
                        <% if(active===0) { %>
                            <p><b>no active rebate requests</b></p>
                        <% } %>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="card">
                        <h2>Apply for rebate</h2>
                        <form action="/rebate" method="post">
                          <div class="mb-3">
                            <label for="startingDate" class="form-label"><b>Starting date</b></label>
                            <input type="date" id="startingDate" class="form-control" name="startDate">
                            <label for="endingDate" class="form-label"><b>Ending Date</b></label>
                            <input type="date" id="endingDate" class="form-control" name="endDate">
                            <button type="submit" class="btn btn-primary mt-3">Submit</button>
                          </div>
                        </form>
                      </div>
                    </div>
                  </div>
                  

                <script>
                    const flag = '<%= flag %>';
                    if(flag==1){
                        const message = "There already exists an active rebate request";
                        const errorModal = new bootstrap.Modal(document.getElementById('errorModal'));
                        document.getElementById('errorMessage').textContent = message;
                        errorModal.show();
                    }
                    else if(flag==2){
                        const message = "you can't withdraw your rebate request past your starting date of request after aprooval and you can't put up another request before ending date after approval untill withdrawn.";
                        const errorModal = new bootstrap.Modal(document.getElementById('errorModal'));
                        document.getElementById('errorMessage').textContent = message;
                        errorModal.show();
                    }
                    var startInput = document.getElementById("startingDate");
                    const today = new Date();
                    // Disable keyboard input
                    startInput.min = today.toISOString().split("T")[0];
                    endInput.min = today.toISOString().split("T")[0];
                    startInput.addEventListener("keydown", function (event) {
                        event.preventDefault();
                    });
                    var endInput = document.getElementById("endingDate");
                    
                    // Disable keyboard input
                    endInput.addEventListener("keydown", function (event) {
                        event.preventDefault();
                    });
                    
                </script>
            </form>
        </div>


        <div class="box" id="heading">
            <h1> My Rebate requests </h1>
        </div>

        <div class="box">
            <% for (let i=0; i < rebates.length; i++) { %>
                <form class="item" action="/rebate/remove" method="post">
                    <% if(rebates[i].displayStatus == "Inactive") { %>
                    <p>
                    <table>
                        <tr>
                            <td><b>From:</b></td>

                            <td>
                                <%=rebates[i].startDate%>

                            </td>
                            <td><b>To:</b></td>
                            <td>
                                <%=rebates[i].endDate%>
                            </td>
                        </tr>
                        <tr>
                            <td><b>Days:</b></td>
                            <td>
                                <%=rebates[i].days%>

                            </td>
                            <td><b>Status:</b></td>
                            <td>
                                <%=rebates[i].status%>
                            </td>
                        </tr>
                    </table>
                    </p>
                    <% } %>
                </form>
                <% }%>
        </div>
        </body>

        </html>
