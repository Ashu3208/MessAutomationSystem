<%- include("../partials/head") %>
    <%- include("../student/navbar") %>
    

        <div class="card">
            <form action="/rebate" method="post" >
             
             <div class="mb-3">
                 <label for="roll-number" class="form-label"><b>Roll No.</b></label>
             <input type="text1" class="form-control" >
             <label for="date" class="form-label"><b>Date</b></label>
             <input type="date" class="form-control" >
             <label for="number of days" class="form-label"><b>Number of days</b></label>
             <input type="number" name="paid" class="form-control" >
             <label for="starting-date" class="form-label"><b>Starting date</b></label>
             <input type="date" class="form-control" >
             <label for="ending date" class="form-label"><b>Ending Date</b></label>
             <input type="date" class="form-control">
             <button type="submit" class="btn btn-primary mt-3">Submit</button>
         </div>
            </form>
</div>
        <div class="box" id="heading">
            <h1> My Rebate requests </h1>
        </div>

        <div class="box">
            <% for (let i=0; i < rebates.length; i++) { %>
                <form class="item" action="/rebate/remove" method="post">
                    <button type="submit" class="remove" name="button" value="<%=rebates[i]._id%>">-</button>
                    <p>
                        <%=rebates[i].days%> days
                            <b>From:</b>
                            <%=rebates[i].startDate%>
                                <b>to:</b>
                                <%=rebates[i].endDate%>
                                <b>status:</b>
                                        <%=rebates[i].status%>

                    </p>

                </form>
                <% }%>


        </div>
        <style>
            .card{
    
    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
  transition: 0.3s;
  width: 40%;
  align-items: center;
  padding: 2px 16px;
  margin: auto;
  margin-top: 2cm;

}
input[type="number"] {
            width:300px;
        }  

   
