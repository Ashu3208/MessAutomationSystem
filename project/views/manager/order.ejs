<%- include("../partials/head") %>
    <%- include("navbar") %>


        <div class="box" id="heading">
            <h1> Orders </h1>
        </div>

        <div class="box">
            <% for (let i=0; i < orders.length; i++) { %>
                <form action="/manager/order" method="post">
                    <button type="submit" class="remove" name="button" value="<%=orders[i]._id%>">-</button>
                    <div class="item">
                        <p>
                        <table>
                            <tr>
                                <td><b>Roll: </b></td>
                                <td>
                                    <%=orders[i].rollNo%>
                                </td>

                            </tr>




                            <% for (let j=0; j < orders[i].itemName.length; j++) { %>

                                <tr>
                                    <td><b>Name:</b></td>
                                    <td>
                                        <%=orders[i].itemName[j]%>
                                    </td>


                                    <td><b>Price: </b></td>
                                    <td>₹<%=orders[i].price[j]%>
                                    </td>


                                    <td><b>Quantity:</b></td>
                                    <td>
                                        <%=orders[i].quantity[j]%>
                                    </td>


                                </tr>


                                <% }%>
                                    <tr>
                                        <td><b>Total: </b></td>
                                        <td>₹<%=orders[i].total%>
                                        </td>

                                    </tr>
                        </table>
                        </p>
                    </div>
                </form>

                <% }%>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
            crossorigin="anonymous"></script>
        </body>

        </html>