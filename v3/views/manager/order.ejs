<%- include("../partials/head") %>
    <%- include("navbar") %>


        <div class="box" id="heading">
            <h1> Orders </h1>
        </div>

        <div class="box">
            <% for (let i=0; i < orders.length; i++) { %>
                <form action="/manager/order" method="post">
                    <button type="submit" class="remove" name="button" value="<%=orders[i]._id%>">-</button>
                    <div class="item">
                        <p>
                            <%=orders[i].rollNo%>
                        </p>

                        <% for (let j=0; j < orders[i].itemName.length; j++) { %>
                            <div class="item">
                                <p>
                                    <b>Name:</b>
                                    <%=orders[i].itemName[j]%>
                                        <b>Price: ₹</b>
                                        <%=orders[i].price[j]%>
                                            <b>Quantity:</b>
                                            <%=orders[i].quantity[j]%>
                                </p>
                            </div>
                            <% }%>
                                <p><b>Total: ₹</b>
                                    <%=orders[i].total%>
                                </p>

                    </div>
                </form>

                <% }%>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
            crossorigin="anonymous"></script>
        </body>

        </html>