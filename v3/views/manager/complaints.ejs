<%- include("../partials/head") %>
    <%- include("navbar") %>

        <div class="box" id="heading">
            <h1> Compliants </h1>
        </div>

        <div class="box">
            <% for (let i=0; i < complaints.length; i++) { %>
                <form class="item" action="/manager/complaints" method="post">
                    <p>
                        <%=complaints[i].rollNo%>
                            <b>Compliant:</b>
                            <%=complaints[i].issue%>
                    </p>
                    <input type="text" name="reply" placeholder="Reply" autocomplete="off">
                    <button type="submit" class="add" name="button" value="<%=complaints[i]._id%>">+</button>
                </form>
                <% }%>


        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
            crossorigin="anonymous"></script>
        </body>

        </html>