<%- include("../partials/head") %>
    <%- include("navbar") %>
        <div class="card">
            <form action="/rebate" method="post">

                <div class="mb-3">
                    <label for="roll-number" class="form-label"><b>Roll No.</b></label>
                    <input type="text" class="form-control" name="rollNo">
                    <label for="date" class="form-label"><b>Date</b></label>
                    <input type="date" class="form-control">
                    <label for="number of days" class="form-label"><b>Number of days</b></label>
                    <input type="number" class="form-control" name="daysNumber" value="0">
                    <label for="starting-date" class="form-label"><b>Starting date</b></label>
                    <input type="date" class="form-control" name="startDate">
                    <label for="ending date" class="form-label"><b>Ending Date</b></label>
                    <input type="date" class="form-control" name="endDate">
                    <button type="submit" class="btn btn-primary mt-3">Submit</button>
                </div>
            </form>
        </div>

        <div class="box" id="heading">
            <h1> My Rebate requests </h1>
        </div>

        <div class="box">
            <% for (let i=0; i < rebates.length; i++) { %>
                <form class="item" action="/rebate/remove" method="post">
                    <button type="submit" class="remove" name="button" value="<%=rebates[i]._id%>">-</button>
                    <p>
                        <%=rebates[i].days%> days
                            <b>From:</b>
                            <%=rebates[i].startDate%>
                                <b>to:</b>
                                <%=rebates[i].endDate%>
                                <b>status:</b>
                                        <%=rebates[i].status%>

                    </p>

                </form>
                <% }%>


        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
            crossorigin="anonymous"></script>
        </body>

        </html>